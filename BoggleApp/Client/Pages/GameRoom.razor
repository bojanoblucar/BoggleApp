@page "/room/{roomId}"
@inherits GameRoomBase


<div class="boggle-container row">
    <div class="gameboard col-md-8">
        <p>Hello @username. Wellcome to room {@room?.Name}</p><br />
        <p>@message</p><br />

        @foreach (var u in usersInGroup)
        {
            <p>@u.Username</p><br />
        }

    <div class="row board justify-content-center">
        @if (letters != null)
        {
            @for (int i = 0; i < 4; i++)
            {
                <div class="row">
                @foreach (var letter in GetBoardRow(i))
                {
                    <div class="dice">
                        <span class="dice-value">@letter</span>
                    </div>
                }
                </div>
            }
        }
    </div>


        <br />

        <button @onclick="Shuffle">Shuffle</button>
    </div>
    <div class="infoboard col-md-4">

    </div>
</div>


@code
{
    string OpenRow()
    {
        return @"<div class=""row"">";
    }

    string CloseRow()
    {
        return "</div>";
    }
}